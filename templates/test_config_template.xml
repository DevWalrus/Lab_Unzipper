<component name="ProjectRunConfigurationManager">
    <configuration default="false" name="{test_name}" type="JUnit" factoryName="JUnit" folderName="{folder_name}">
        <module name="{module_name}" />
        <option name="MAIN_CLASS_NAME" value="test.{class_name}" />
        <extension name="coverage">
            <pattern>
                <option name="PATTERN" value="test.*" />
                <option name="ENABLED" value="true" />
              </pattern>
          </extension>
        <option name="PACKAGE_NAME" value="test" />
        <option name="METHOD_NAME" value="" />
        <option name="TEST_OBJECT" value="class" />
        <method v="2">
            <option name="Make" enabled="true" />
        </method>
    </configuration>
</component>
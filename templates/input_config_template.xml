<component name="ProjectRunConfigurationManager">
    <configuration default="false" name="{config_name}" type="Application" factoryName="Application" folderName="{folder_name}">
        <module name="{module_name}" />
        <option name="MAIN_CLASS_NAME" value="{class_name}" />
        <option name="PROGRAM_PARAMETERS" value="{param}" />
        <option name="WORKING_DIRECTORY" value="$PROJECT_DIR$/{module_name}" />
        <option name="REDIRECT_INPUT" value="true" />
        <option name="INPUT_FILE" value="$PROJECT_DIR$/{input_dir}" />
        <method v="2">
            <option name="Make" enabled="true" />
        </method>
    </configuration>
</component>